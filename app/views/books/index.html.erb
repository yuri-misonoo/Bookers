<h1>Book</h1>

<% @books.each do |book| %>
  <div class="index-content">
    <h4>Title</h4>
      <span><%= book.title %></span>
     
    <h4>Body</h4>
      <span><%= book.body %></span>
    
    <div class="index-option">
      <span><%= link_to "show", book_path(book.id) %></span>
      <span><%= link_to "edit", edit_book_path(book.id) %></span>
      <span><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "date-comfirm" => "errors" %></span>
    </div>
  </div>
<% end %>

<h1>New book</h1>

<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 
 <%= f.submit 'Create Book' %>
<% end %>
  
