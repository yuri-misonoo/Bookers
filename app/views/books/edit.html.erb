<% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>

<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>

<span class="update"><%= f.submit 'Update Book' %></span>

<div class="edit-link">
  <span class= edit-link-bitton><%= link_to "show", book_path(@book.id) %></span>
  <span class= edit-link-bitton> | </span>
  <span class= edit-link-bitton><%= link_to "back", books_path %></span>   
</div>


<% end %>

