<% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
<% end %>

<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<span><%= link_to "show", book_path(@book.id) %></span>
<span><%= link_to "back", :back %></span>

<% end %>

